<div class="profile-position">
  <div>
    <img class="image-profile" src="{{user.profilepic}}" alt="profilepic">
  </div>
  <div class="background-father">
    <b>{{user.name}}</b>
    <p><b>Email:</b> {{user.email}}</p>
    <p><b>Age: </b>{{user.age}}</p>
    {{#if user.instructor}}
    <a class="btnform-link" href="/user/new-activity">Create an activity</a>
    {{else}}
    <a class="btnform-link" href="/user/edit-profile">Become an Instructor</a>
    {{/if}}
  </div>
</div>

<div class="btnprofile-cont">
  <form action="/user/edit-profile" method="GET">
    <button class="btnform-edit" style="margin-bottom:10px" type="submit" >EDIT</button>
  </form>
  <form action="/user/delete" method="POST">
    <button class="btnform-delete" type="submit" >DELETE</button>
  </form>
</div>




{{#if user.instructor}} 

  {{> isInstructor }}

{{/if}}



<div class="list-title">
  <p>RESERVED ACTIVITIES</p>
</div>

<div class="activity-wrap">
{{#each user.reservAct}} 
  <div class="activity-detail">
      <img class="activity-pic" src="{{activitypic}}">
      <div>
          <a class="card-title" href="/user/activity/{{this.id}}">{{title}}</a>
          <p><b>Instructor: </b>{{instructor}}</p>
          <p><b>Day: </b>{{date}}</p>
          <p><b>Time: </b>{{time}}</p>
          <form action="/user/activity/{{_id}}/book-activity-delete" method="POST">
            <button class="btnform-card" type="submit">DELETE</button>
          </form>
      </div>
  </div>
{{/each}}
</div>







