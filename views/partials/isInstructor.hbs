
<div class="list-title">
  <p>CREATED ACTIVITIES</p>
</div>

<div class="activity-wrap">
{{#each user.creatAct}} 
  <div class="activity-detail">
      <img class="activity-pic" src="{{activitypic}}">
      <div>
          <a class="card-title" href="/user/activity/{{this.id}}">{{title}}</a>
          <p><b>Instructor: </b>{{instructor}}</p>
          <p><b>Day: </b>{{date}}</p>
          <p><b>Time: </b>{{time}}</p>
          <form action="/user/activity/{{_id}}/edit" method="POST">
            <button class="btnform-card" type="submit">EDIT</button>
          </form>
          <form action="/user/activity/{{_id}}/delete-activity" method="POST">
            <button class="btnform-card" type="submit">DELETE</button>
          </form>
        </div>
      </div>
{{/each}}
</div>