<h2> Sign Up </h2>

{{#if errorMessage}}
<p class="error-message">
    {{ errorMessage }}
</p>
{{/if}}

<form action="/signup" method="POST" enctype="multipart/form-data">
    <div>
        <label for=''>Profile picture</label>
        <input type="file" name="profilepic" id="profilepic-input">
    </div>
    <div>
        <label for="name-input"> Name </label>
        <input type="text" name="name" id="name-input" placeholder="e.g., Diana Prince">
    </div>

    <div>
        <label for="email-input"> Email </label>
        <input type="email" name="email" id="email-input" placeholder="e.g., diana@themyscira.agency">
    </div>

    <div>
        <label for="password-input"> Password </label>
        <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••">
    </div>

    <button> Create New Account </button>
</form>




<p>
    Already have an account?
    <a href="/login">
        Log in.
    </a>
</p>

